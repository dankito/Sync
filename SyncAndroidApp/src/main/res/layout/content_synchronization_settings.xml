<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_synchronization_settings"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.dankito.sync.activities.SynchronizationSettingsActivity"
    tools:showIn="@layout/activity_synchronization_settings">`
    
    
    <ListView
        android:id="@+id/lstvwSynModuleConfigurations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnStartSynchronizingWithDevice"
        />
    
    <Button 
        android:id="@+id/btnStartSynchronizingWithDevice"
        android:layout_width="@dimen/activity_synchronization_setting_button_start_syncing_width" 
        android:layout_height="@dimen/activity_synchronization_setting_button_start_syncing_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        style="@android:style/TextAppearance.Medium"
        android:text="@string/synchronize_with_device"
    />

</RelativeLayout>
